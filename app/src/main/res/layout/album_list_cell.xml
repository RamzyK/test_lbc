<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/album_list_cell_width"
    android:layout_height="@dimen/album_list_cell_height"
    app:cardElevation="@dimen/album_list_cell_card_elevation"
    app:cardCornerRadius="@dimen/album_list_cell_card_corner_radius"
    android:layout_marginEnd="@dimen/album_list_cell_end_margin"
    android:layout_marginStart="@dimen/album_list_cell_start_margin"
    android:layout_marginTop="@dimen/album_list_cell_top_margin"
    android:layout_marginBottom="@dimen/album_list_cell_bottom_margin"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/album_position_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/album_list_cell_position_tv_text_size"
        tools:text="@string/album_list_cell_album_position_tv_tools_text"/>


</androidx.cardview.widget.CardView>