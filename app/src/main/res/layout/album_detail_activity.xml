<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activities.album_detail.AlbumDetailActivity">

    <ImageView
        android:id="@+id/album_detail_cover_iv"
        android:layout_width="@dimen/album_detail_cover_width"
        android:layout_height="@dimen/album_detail_cover_height"
        android:layout_gravity="center"
        tools:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/cover_of_the_album" />

    <TextView
        android:id="@+id/album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/album_detail_title_text_size"
        android:layout_marginTop="@dimen/album_detail_title_top_margin"
        android:layout_marginStart="@dimen/album_detail_title_start_margin"
        android:layout_marginEnd="@dimen/album_detail_title_end_margin"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:text="@string/album_detail_tools_text"/>

</androidx.appcompat.widget.LinearLayoutCompat>